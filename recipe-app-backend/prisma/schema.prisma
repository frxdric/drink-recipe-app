generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Drink {
  id          Int     @id @default(autoincrement())
  title       String  @unique
  description String?
  creator     User    @relation(fields: [creatorId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  creatorId   Int
}

model User {
  id       Int     @id @default(autoincrement())
  username String
  Drink    Drink[]
}
model Recipe {
    id       Int     @id @default(autoincrement())
    ingredient String
    quantity Int
}
